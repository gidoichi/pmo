# -*- mode: shell-script -*-

set -eu

debug() (
    (PS4=':'; set -x; : "${@}")
    "$@"
)

help() {
    debug : ${0##*/} help
    cat <<-USAGE 1>&2
	usage: ${0##*/} <subcommand>
	sub commands:
	  list
	  search
	  update
	  upgrade
	USAGE
}

subcmd="${1}"

case "${subcmd}" in
    list)    debug brew list ;;
    search)  debug brew search "$@" ;;
    update)  debug brew update ;;
    upgrade) debug brew upgrade ;;
    help)    help ;;
esac

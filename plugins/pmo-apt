# -*- mode: shell-script -*-

set -eu

debug() (
    (PS4=':'; set -x; : "${@}")
    "$@"
)

help() {
    debug : ${0##*/} help
    cat <<-USAGE 1>&2
	usage: ${0##*/} <subcommand>
	sub commands:
	  list
	  search
	  update
	  upgrade
	USAGE
}

subcmd="${1}"

case "${subcmd}" in
    list)    debug apt list --installed ;;
    search)  debug sudo apt search "$@" ;;
    update)  debug sudo apt update ;;
    upgrade) debug sudo apt upgrade ;;
    help)    help ;;
esac
